<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent1</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="seekBarStyle">@style/SeekBarStyle1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:listDivider">@color/colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorAccent1</item>
    </style>

    <style name="SeekBarStyle1" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorPrimary</item>
        <item name="android:progressTint">@color/colorAccent1</item>
        <item name="android:thumbTint">@color/colorAccent1</item>
    </style>

    <style name="SeekBarStyle2" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorPrimaryDark</item>
        <item name="android:progressTint">@color/colorPrimaryDark</item>
        <item name="android:thumbTint">@color/colorAccent1</item>
    </style>

    <style name="SwitchStyle1" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">@color/colorAccent1</item>
        <item name="android:colorForeground">@color/colorPrimary</item>
    </style>

    <style name="SwitchStyle2" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">@color/colorAccent1</item>
        <item name="android:thumbTint">@color/colorAccent1</item>
        <item name="android:colorForeground">@color/colorAccent1</item>
    </style>

    <style name="TimePickerStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="android:style/Widget.EditText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
