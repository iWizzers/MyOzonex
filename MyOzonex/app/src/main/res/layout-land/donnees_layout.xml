<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/horizontal_scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@drawable/fond1">

    <ScrollView
        android:id="@+id/vertical_scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <AbsoluteLayout
            android:id="@+id/layout"
            android:layout_width="1280dp"
            android:layout_height="wrap_content"
            tools:ignore="Deprecated">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparentBackground"
                    android:paddingTop="24dp"
                    android:paddingBottom="25dp"
                    android:layout_weight="0"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:id="@+id/layout_ph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                            <View
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ligne_horizontal_sous_titre"
                                android:layerType="software"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:maxLines="1"
                                android:text="pH"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/couleurSousTitre"
                                android:textSize="@dimen/texteSousTitre" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ligne_horizontal_sous_titre"
                                android:layerType="software"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp">
                            <TextView
                                android:id="@+id/texte_valeur_ph"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7.20"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteValeurPageDonnee" />

                            <TextView
                                android:id="@+id/texte_donnees_ph"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Point de consigne : 7.20\nHystérésis : ↑7.00 - ↓7.30"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteGeneral" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_orp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                            <View
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ligne_horizontal_sous_titre"
                                android:layerType="software"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:maxLines="1"
                                android:text="ORP"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/couleurSousTitre"
                                android:textSize="@dimen/texteSousTitre" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ligne_horizontal_sous_titre"
                                android:layerType="software"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp" >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_column="0"
                                android:layout_row="0" >
                                <TextView
                                    android:id="@+id/texte_actif_orp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chlore actif"
                                    android:textStyle="bold"
                                    android:textColor="@color/couleurTexteGeneral"
                                    android:textSize="@dimen/texteGeneral" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/texte_valeur_ampero"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="1.20 ppm"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteValeurPageDonnee" />

                            <TextView
                                android:id="@+id/texte_valeur_libre_actif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="Chlore libre actif : 0.71 ppm"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteSousTitre" />

                            <TextView
                                android:id="@+id/texte_donnees_ampero"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="Point de consigne : 0.71 ppm\nHystérésis : ↑1.00 ppm"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteGeneral" />

                            <View
                                android:id="@+id/ligne_sep_orp"
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_row="0"
                                android:layout_rowSpan="3"
                                android:background="@android:color/white" />

                            <TextView
                                android:id="@+id/texte_valeur_orp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="3"
                                android:layout_row="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="600 mV"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteValeurPageDonnee" />

                            <TextView
                                android:id="@+id/texte_donnees_orp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="3"
                                android:layout_row="2"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="Point de consigne : 600 mV\nHystérésis : ↑580 mV"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteGeneral" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_column="4"
                                android:layout_columnWeight="2" />
                        </GridLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_temperatures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >
                            <View
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ligne_horizontal_sous_titre"
                                android:layerType="software"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:maxLines="1"
                                android:text="Températures"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/couleurSousTitre"
                                android:textSize="@dimen/texteSousTitre" />

                            <View
                                android:layout_width="50dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/ligne_horizontal_sous_titre"
                                android:layerType="software"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp" >
                            <TextView
                                android:id="@+id/texte_temp_bassin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="Bassin"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteGeneral" />

                            <TextView
                                android:id="@+id/texte_valeur_temp_bassin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="0"
                                android:layout_row="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="24.1 °C"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteValeurPageDonnee" />

                            <View
                                android:id="@+id/ligne_sep_temperatures"
                                android:layout_width="2dp"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_row="0"
                                android:layout_rowSpan="2"
                                android:background="@android:color/white" />

                            <TextView
                                android:id="@+id/texte_temp_ext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_row="0"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="Externe"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteGeneral" />

                            <TextView
                                android:id="@+id/texte_valeur_temp_ext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:layout_row="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:text="24.1 °C"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/couleurTexteGeneral"
                                android:textSize="@dimen/texteValeurPageDonnee" />
                        </GridLayout>
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="24dp"
                    android:paddingBottom="25dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_weight="0"
                    android:orientation="vertical" >
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/bouton_synoptique"
                        android:layout_width="121dp"
                        android:layout_height="121dp"
                        android:layout_weight="0"
                        android:background="@drawable/background_button"
                        android:text="Vue ensemble (synopt.)"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/texteGeneral"/>
                </LinearLayout>
            </LinearLayout>
        </AbsoluteLayout>
    </ScrollView>
</HorizontalScrollView>