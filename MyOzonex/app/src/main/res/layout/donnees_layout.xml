<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/global_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_portrait_2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_widget_space"
            android:paddingBottom="@dimen/layout_widget_space"
            android:orientation="vertical" >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/layout_widget_space"
                android:paddingBottom="@dimen/layout_widget_space"
                android:paddingLeft="@dimen/layout_widget_space"
                android:paddingRight="@dimen/layout_widget_space"
                android:background="@color/transparentBackground">
                <TextView
                    android:id="@+id/texte_aucun_capteurs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:gravity="center"
                    android:text="Pas de capteurs installés"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texte_temperature_bassin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|left"
                    android:text="Température bassin"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valeur_temperature_bassin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="24.0 °C"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texte_temperature_externe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|left"
                    android:text="Température externe"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valeur_temperature_externe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="21.0 °C"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texte_ph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|left"
                    android:text="pH"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valeur_ph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="7.00"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texte_orp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|left"
                    android:text="ORP"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valeur_orp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="600 mV"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texte_pression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|left"
                    android:text="Pression"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valeur_pression"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="0.70 bar"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texte_ampero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|left"
                    android:text="Ampéro"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valeur_ampero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="1.00 ppm"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texte_4_20_libre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical|left"
                    android:text="4-20 Libre"
                    android:textColor="@color/couleurSousTitre"
                    android:textSize="@dimen/texteSousTitre"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valeur_4_20_libre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical|right"
                    android:text="1.00"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>