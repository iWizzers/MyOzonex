<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/global_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_portrait_2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_widget_space"
            android:paddingBottom="@dimen/layout_widget_space"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/layout_widget_space"
                android:background="@color/transparentBackground"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_widget_space"
                    android:orientation="horizontal" >
                    <View
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@color/couleurSousTitre"
                        android:layerType="software" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:maxLines="1"
                        android:text="Données"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/couleurSousTitre"
                        android:textSize="@dimen/texteSousTitre" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@color/couleurSousTitre"
                        android:layerType="software" />
                </LinearLayout>

                <TextView
                    android:id="@+id/texte_donnees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_widget_space"
                    android:layout_marginRight="@dimen/layout_widget_space"
                    android:text="Volume : X m3"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_regulations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/layout_widget_space"
                android:paddingBottom="@dimen/layout_widget_space"
                android:background="@color/transparentBackground"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_widget_space"
                    android:orientation="horizontal" >
                    <View
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@color/couleurSousTitre"
                        android:layerType="software" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:maxLines="1"
                        android:text="Régulations (pH / ORP)"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/couleurSousTitre"
                        android:textSize="@dimen/texteSousTitre" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:background="@color/couleurSousTitre"
                        android:layerType="software" />
                </LinearLayout>

                <TextView
                    android:id="@+id/texte_donnees_regulations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_widget_space"
                    android:layout_marginRight="@dimen/layout_widget_space"
                    android:text="Type de refoulements : X\nType de régulation : TOR\nTemps sécurité injection : 45 minute(s)\nHystéresis sécurité injection pH : 0.15\nHystéresis sécurité injection ORP : 100 mV\nHystéresis sécurité injection ampéro : 0.40"
                    android:textColor="@color/couleurTexteGeneral"
                    android:textSize="@dimen/texteGeneral"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>