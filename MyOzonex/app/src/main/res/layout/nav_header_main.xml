<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_widget_space"
    android:paddingTop="@dimen/layout_widget_space"
    android:paddingRight="@dimen/layout_widget_space"
    android:paddingBottom="@dimen/layout_widget_space"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/id_systeme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Système : XXXX-XXXX"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/texteSousTitre"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space" >

        <ImageView
            android:id="@+id/image_etat_systeme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:srcCompat="@android:drawable/presence_online" />

        <TextView
            android:id="@+id/texte_etat_systeme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/layout_space"
            android:layout_gravity="center"
            android:text="Etat : déconnecté"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/texteGeneral"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space"
        android:text="@string/nav_header_subtitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/texteGeneral" />

    <TextView
        android:id="@+id/version_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space"
        android:text="Version : x.x.x"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/texteGeneral" />
</LinearLayout>
