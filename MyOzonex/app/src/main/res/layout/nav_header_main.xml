<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/id_systeme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_widget_space"
        android:text="Système : XXXX-XXXX"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texteSousTitre"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space"
        android:layout_marginBottom="@dimen/layout_space" >
        <TextView
            android:id="@+id/led_etat_systeme"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:enabled="false"
            android:background="@drawable/led_etat_systeme" />

        <TextView
            android:id="@+id/texte_etat_systeme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_space"
            android:layout_gravity="center"
            android:text="Etat : déconnecté"
            android:textColor="@color/couleurTexteGeneral"
            android:textSize="@dimen/texteGeneral"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ligne"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layerType="software"
        android:src="@drawable/dotted_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_space" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_space"
            android:layout_marginLeft="@dimen/layout_space"
            android:layout_gravity="center"
            android:text="@string/nav_header_subtitle"
            android:textColor="@color/couleurTexteGeneral"
            android:textSize="@dimen/texteGeneral" />
    </LinearLayout>
</LinearLayout>
